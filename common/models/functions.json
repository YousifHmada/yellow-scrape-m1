  "options": {
    "validateUpsert": true
  },
  "properties": {},
  "validations": [],
  "relations": {},
  "acls": [],
  "methods": {
    "crawl": {
      "accepts": [
        {
          "arg": "name",
          "type": "string",
          "required": true,
          "description": "the name of the category to be crawled",
          "http": {
            "source": "query"
          }
        },
        {
          "arg": "allow_deep_digging",
